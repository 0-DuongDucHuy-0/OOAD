<%- include('header') %>

    <%- include('aside') %>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    <%= title %>
                </h1>
            </section>

            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="box">
                    <div class="box-body">

                        <form action="" method="GET" class="form-inline" role="form">

                            <div class="form-group">
                                <input class="form-control" name="name" placeholder="Nhập tên sản phẩm">
                            </div>

                            <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
                            <a href="/add-product" class="btn btn-success pull-right"><i class="fa fa-plus"></i> Thêm
                                mới</a>
                        </form>

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Price ( $ )</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% data.map(function(item) { %>
                                    <tr>
                                        <td scope="row"><%= item.AuctionID %></td>
                                        <td scope="row"><%= item.Title %></td>
                                        <td scope="row"><%= item.price %></td>
                                        <td scope="row"><%= item.Status %></td>
                                        <td class="text-right">
                                            <a href="/edit-product/<%= item.AuctionID %>" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i> EDIT</a>
                                            <a href="/delete-product/<%= item.AuctionID %>" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> DELETE</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <div class="box-footer">
                        <ul class="pagination">
                            <% if(_name) { %>
                                <li><a href="/products/?page=<%= _page>1 ? _page-1 : 1 %>&name=<%= _name %>">&laquo;</a></li>
                                <% for(i =1; i <= totalPages; i++) { %>
                                    <li class="<%= _page == i ? 'active' : '' %>"><a href="/products/?page=<%= i %>&name=<%= _name %>"><%= i %></a></li>
                                <% } %>
                                <li><a href="/products/?page=<%= _page < totalPages ? _page+1 : totalPages %>&name=<%= _name %>">&raquo;</a></li>
                            <% } else { %> 
                                <li><a href="/products/?page=<%= _page>1 ? _page-1 : 1 %>">&laquo;</a></li>
                                <% for(i =1; i <= totalPages; i++) { %>
                                    <li class="<%= _page == i ? 'active' : '' %>"><a href="/products/?page=<%= i %>"><%= i %></a></li>
                                <% } %>
                                <li><a href="/products/?page=<%= _page < totalPages ? _page+1 : totalPages %>">&raquo;</a></li>
                            <% } %>   
                        </ul>
                    </div>
                </div>
                <!-- /.box -->

            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <%- include('footer') %>